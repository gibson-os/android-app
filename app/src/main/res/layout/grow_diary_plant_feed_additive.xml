<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/inner_spacing" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/thumb_width"
        android:layout_height="@dimen/thumb_width"
        android:contentDescription="@string/grow_diary_plant_image_description"
        app:srcCompat="@drawable/ic_hemp" />

    <TextView
        android:id="@+id/additive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>